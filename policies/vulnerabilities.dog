/// For a given collection of purls, check for vulnerabilities and produce an OpenVEX document for it.
pattern not-affected = lang::map<uri::purl> | osv::from-purl | openvex::from-osv | openvex::not-affected

/// Check for vulnerabilities in a given CycloneDX SBOM
pattern sbom-not-affected = cyclonedx::component-purls | not-affected

/// Do the same for proxied requests for build dependencies
pattern proxy-not-affected = {
  purl: not-affected
}
